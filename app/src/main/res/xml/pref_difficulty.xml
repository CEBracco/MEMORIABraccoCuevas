<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_level"
        android:title="@string/pref_level_label"
        android:entries="@array/pref_levels"
        android:entryValues="@array/pref_levels" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_enable_time"
        android:title="@string/pref_enable_time_label" />
    <EditTextPreference
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_time_value_label"
        android:key="pref_time_value"
        android:inputType="number" />
</PreferenceScreen>
